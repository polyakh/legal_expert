{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      // back end directory
      "~lib": [
        "lib"
      ],
      "~lib/*": [
        "lib/*"
      ],
      // front end directories
      "~pages/*": [
        "pages/*"
      ],
      "~components": [
        "components"
      ],
      "~components/*": [
        "components/*"
      ],
      "~shared": [
        "shared"
      ],
      "~shared/*": [
        "shared/*"
      ],
      "~styles": [
        "styles"
      ],
      "~styles/*": [
        "styles/*"
      ],
      "~root": [
        "/"
      ],
      "~root/*": [
        "/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    ".next",
    "node_modules",
    "next.config.js"
  ]
}
